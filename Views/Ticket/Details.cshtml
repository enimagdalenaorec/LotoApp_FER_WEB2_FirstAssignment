@model dynamic

@{
    ViewData["Title"] = "Ticket Details";
}

<div class="container mt-4">
    <h2>Ticket Details</h2>

    <p><strong>Document Number:</strong> @Model.DocumentNumber</p>
    <p><strong>Selected Numbers:</strong> @Model.SelectedNumbers</p>

    @if (!string.IsNullOrEmpty(Model.DrawnNumbers))
    {
        <p><strong>Drawn Numbers:</strong> @Model.DrawnNumbers</p>
    }
    else
    {
        <p><em>Numbers not drawn yet.</em></p>
    }

    @if (Model.IsActive == true)
    {
        <p><span class="badge bg-success">Round Active</span></p>
    }
    else
    {
        <p><span class="badge bg-secondary">Round Closed</span></p>
    }

    <p class="text-muted mt-4" style="font-size: 0.9rem;">
        Generated by <strong>LotoApp</strong>.  
        Visit <a href="/">LotoApp</a> to join a future round.
    </p>
</div>
