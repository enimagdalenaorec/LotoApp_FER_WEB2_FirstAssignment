@model LotoApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <h2>Welcome @Model.UserEmail</h2>

    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model.UserEmail))
        {
            <a class="btn btn-outline-secondary" href="/Account/Logout">Logout</a>
        }
        else
        {
            <a class="btn btn-primary" href="/Account/Login">Login</a>
        }
    </div>


     <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Latest Round Info</h5>
            <p><strong>Tickets sold:</strong> @Model.TicketCount</p>

            @if (!string.IsNullOrEmpty(Model.DrawnNumbers))
            {
                <p><strong>Drawn numbers:</strong> @Model.DrawnNumbers</p>
            }
            else
            {
                <p><em>Numbers not drawn yet.</em></p>
            }

            @if (Model.IsRoundActive)
            {
                <a asp-controller="Ticket" asp-action="Create" class="btn btn-success">Buy a Ticket</a>
            }
            else
            {
                <p><span class="badge bg-secondary">Ticket sales closed</span></p>
            }
        </div>
    </div>

    @if (Model.UserTickets != null && Model.UserTickets.Any())
    {
        <h4>Your Tickets</h4>
        <div class="row">
            @foreach (var ticket in Model.UserTickets)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <p><strong>Document:</strong> @ticket.DocumentNumber</p>
                            <p><strong>Numbers:</strong> @ticket.SelectedNumbers</p>
                            <p>
                                @if (ticket.Round?.IsActive == true)
                                {
                                    <span class="badge bg-success">Active Round</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Closed</span>
                                }
                            </p>

                            <button class="btn btn-outline-primary btn-sm"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#qr-@ticket.UUID"
                                    aria-expanded="false"
                                    aria-controls="qr-@ticket.UUID">
                                Show QR
                            </button>

                            <div class="collapse mt-2" id="qr-@ticket.UUID">
                                <img src="/Ticket/QR/@ticket.UUID" alt="QR Code" class="img-fluid border rounded" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        // is user is logged in display message, if not, no need otdisplay anything
        @if (!string.IsNullOrEmpty(Model.UserEmail)) {
            <p class="text-muted">You have not created any tickets yet, or there is no currently active round.</p>
        }
    }
</div>
